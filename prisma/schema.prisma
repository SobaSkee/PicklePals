generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Courts {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  address     String
  description String
  image       String
  isPublic    Boolean
  lat         Float
  lng         Float
  name        String
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkUserId String   @unique
  createdAt   DateTime @db.Date
  email       String   @unique
  firstName   String
  imageUrl    String
  updatedAt   DateTime @db.Date
}

model Tournaments {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  court       String
  users       String[]
  host        String
  maxSize     Int
  description String
}